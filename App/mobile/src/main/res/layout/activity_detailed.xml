<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/img"
                android:src="@drawable/bboxer"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Barbara Boxer"
                android:id="@+id/name"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textSize="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignBottom="@+id/party"
                android:layout_toEndOf="@+id/party"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Senator"
                android:id="@+id/tag"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textSize="24dp"
                android:layout_marginRight="30dp"
                android:layout_above="@+id/name"
                android:layout_toEndOf="@+id/party"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="D"
                android:id="@+id/party"
                android:background="@drawable/dem"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="36dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="29dp"
                android:layout_below="@+id/img"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Term Ends:"
                android:id="@+id/term"
                android:layout_below="@+id/name"
                android:layout_alignStart="@+id/party"
                android:layout_alignEnd="@+id/name"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Committees:"
                android:id="@+id/committees"
                android:layout_below="@+id/term"
                android:layout_alignStart="@+id/term"
                android:layout_alignEnd="@+id/term"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bills:"
                android:id="@+id/bills"
                android:layout_below="@+id/committees"
                android:layout_alignStart="@+id/committees"
                android:layout_alignEnd="@+id/committees"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>